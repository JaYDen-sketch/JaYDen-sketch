#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int generateRandomNumber(int n)
{
    srand(time(NULL));
    return rand() % n;
}

int greater(char char1, char char2)
{
    if (char1 == char2)
    {
        return -1;
    }
    else if ((char1 == 'r' && char2 == 's') || (char1 == 'p' && char2 == 'r') || (char1 == 's' && char2 == 'p'))
    {
        return 1;
    }
    else
    {
        return 0;
    }
}

void printMove(char move)
{
    switch (move)
    {
    case 'r':
        printf("Rock");
        break;
    case 'p':
        printf("Paper");
        break;
    case 's':
        printf("Scissors");
        break;
    case 'l':
        printf("Lizard");
        break;
    case 'v':
        printf("Spock");
        break;
    }
}

int main()
{
    int playerScore = 0, compScore = 0, temp;
    char playerChar, compChar;
    char dict[] = {'r', 'p', 's', 'l', 'v'};
    printf("Welcome to Rock, Paper, Scissors, Lizard, Spock.\n");

    for (int i = 0; i < 3; i++)
    {
        printf("Player's Turn:\n");
        printf("Choose 1 for Rock, 2 for Paper, 3 for Scissors, 4 for Lizard, and 5 for Spock: ");
        scanf("%d", &temp);
        playerChar = dict[temp - 1];

        printf("Computer's Turn: ");
        temp = generateRandomNumber(5) + 1;
        compChar = dict[temp - 1];
        printMove(compChar);
        printf("\n");

        int result = greater(compChar, playerChar);

        if (result == 1)
        {
            compScore += 1;
            printf("Computer wins this round. %c beats %c.\n", compChar, playerChar);
        }
        else if (result == 0)
        {
            playerScore += 1;
            printf("Player wins this round. %c beats %c.\n", playerChar, compChar);
        }
        else
        {
            printf("It's a draw. Both chose %c.\n", playerChar);
        }
    }

    printf("\nFinal Scores:\n");
    printf("Player: %d\n", playerScore);
    printf("Computer: %d\n", compScore);

    if (playerScore > compScore)
    {
        printf("Player wins the game!\n");
    }
    else if (playerScore < compScore)
    {
        printf("Computer wins the game!\n");
    }
    else
    {
        printf("It's a draw!\n");
    }

    return 0;
}
